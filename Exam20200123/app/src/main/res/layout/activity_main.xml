<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical"
    android:layout_gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="네트워크 프로그래밍 구현 - HTTP 통신"
        android:textSize="20dp"
        android:paddingBottom="10dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">

            <Button
                android:id="@+id/btn_http"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#A81044"
                android:text="-HttpURLConnection-"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="right">

                <Button
                    android:id="@+id/btn_http_xml"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textColor="#E91E63"
                    android:text="Http-XML"
                    />

                <Button
                    android:id="@+id/btn_http_json"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textColor="#E91E63"
                    android:text="Http-json"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">

            <Button
                android:id="@+id/btn_retro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#3F51B5"
                android:text="-Retrofit Library-" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="right">

                <Button
                    android:id="@+id/btn_retro_xml"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textColor="#2196F3"
                    android:text="Retro-XML"
                    />

                <Button
                    android:id="@+id/btn_retro_json"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textColor="#2196F3"
                    android:text="Retro-json"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/txt_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#57C5C5C5"
        android:text="결과 출력"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        />

</LinearLayout>